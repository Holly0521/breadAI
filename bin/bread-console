#!/usr/bin/env python3
import sys
import os

from breadAI import core
from breadAI import log
from breadAI import serv


if os.geteuid():
    args = [sys.executable] + sys.argv
    os.execlp('sudo', 'sudo', *args)


def show_help():
    print(
        '\n'
        ' insert:   insert data\n'
        ' start:    start server\n'
        ' Ctr+C:    stop server\n'
        ' help:     display this help\n'
        ' q:        exit this console\n'
        )


def active(cmd):
    if cmd == 'help':
        show_help()
    elif cmd == 'insert':
        core.data.insertData()
    elif cmd == 'start':
        serv.start()
    else:
        print(core.chat().response(cmd, False))


if not core.misc.cfg().get('log_path'):
    log_path = os.path.dirname(log.__file__)
    core.misc.cfg().write('log_path', log_path)

    
if len(sys.argv) > 1:
    cmd = sys.argv[1]
    active(cmd)
    sys.exit(0)


while True:
    cmd = input('>> ')
    if cmd == 'q' or cmd == 'exit':
        break
    elif cmd == '':
        continue
    else:
        active(cmd)
